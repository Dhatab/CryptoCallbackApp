<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        android:gravity="center">
    <!--<TextView
        android:id="@+id/newtextViewHead"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginLeft="3dp"
        android:layout_toEndOf="@+id/imageView2"
        android:autoSizeTextType="uniform"
        android:text="Name" />-->

    <TextView
        android:id="@+id/Symbol2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newtextViewHead"
        android:layout_toEndOf="@+id/imageView2"
        android:textColor="@color/white"
        android:text="symbol"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Price2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="price" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/layout1"
        android:layout_marginBottom="14dp">

    <TextView
        android:id="@+id/Hour2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Price2"
        android:layout_below="@+id/Price2"
        android:text="1 HR:"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/TFHour2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Seven2"
        android:layout_below="@+id/Hour2"
        android:text="24 Hours Days"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/Seven2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Price2"
        android:layout_below="@+id/TFHour2"
        android:text="Seven Days"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"/>


    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:background="@color/white"
        app:tabTextColor="#000000"
        android:layout_height="20dp"
        android:layout_below="@+id/layout2"
        app:tabBackground="@drawable/fade_selector"
        app:tabSelectedTextColor="@color/white"
        app:tabIndicatorHeight="0dp"/>

    <com.cryptocallback.cryptocallback.CoinDetailActivity.NonSwipeableViewPager
        android:id="@+id/graph_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/tabs"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:layout_above="@id/linear"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/linear"
        android:orientation="horizontal"
        android:background="@color/white">

        <at.markushi.ui.CircleButton
            android:id="@+id/button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/Symbol2"
            android:src="@drawable/ic_create_alert"
            app:cb_color="@color/colorPrimary"
            app:cb_pressedRingWidth="8dp"
            android:layout_weight="1"/>

        <at.markushi.ui.CircleButton
            android:id="@+id/button_favorite"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/TFHour2"
            android:src="@drawable/ic_fav_notfilled"
            app:cb_color="@color/colorPrimary"
            app:cb_pressedRingWidth="8dp"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>